<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cse.mist.audio_upload_download.Record_audio">

    <ImageButton
        android:id="@+id/btn_rcd"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@android:color/holo_red_dark"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/tv_recordtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_rcd"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_rcd"
        android:layout_marginBottom="137dp"
        android:text="Tap to record"
        android:textSize="25dp" />

</RelativeLayout>
